<Alloy>
	<Window class="container">
		<ScrollableView id="scrollview" showPagingControl="true" pagingControlAlpha="0.8" backgroundColor="#FFF" backgroundImage="/images/outros/background.png">
            <View backgroundImage="/system/background/wizard_01.png">
            	<View class="wizard vert" bottom="50dp">
		        	<Label class="wizard-label bold font-16 700" backgroundPaddingTop="3dp">Bem-vindo!</Label>
		        	<Label class="wizard-label font-12 500">Bem-vindo ao Beep, seu</Label>
		        	<Label class="wizard-label font-12 500">termômetro de festas.</Label>
		        </View>
      		</View>
            <View backgroundImage="/system/background/wizard_02.png">
            	<View class="wizard vert" bottom="50dp">
		        	<Label class="wizard-label bold font-16 700" backgroundPaddingTop="3dp">Descubra e Compare!</Label>
		        	<Label class="wizard-label font-12 500">Saiba quais as melhores</Label>
		        	<Label class="wizard-label font-12 500">festas ao seu redor</Label>
		        	<Label class="wizard-label font-12 500">Sinta como elas estão faladas</Label>
		        	<Label class="wizard-label font-12 500">e compare-as.</Label>
		        </View>           
		    </View>
            <View backgroundImage="/system/background/wizard_03.png">
            	<View class="wizard vert" bottom="50dp">
		        	<Label class="wizard-label bold font-16 700" backgroundPaddingTop="3dp">Clube  de Vantagens.</Label>
		        	<Label class="wizard-label font-12 500">Faça parte de um vasto</Label>
		        	<Label class="wizard-label font-12 500">clube de vantagens com</Label>
		        	<Label class="wizard-label font-12 500">acúmulo de pontos</Label>
		        	<Label class="wizard-label font-12 500">e descontos.</Label>
		        </View>
            </View>
        </ScrollableView>     
        
        <Button class="font-12 bold register" onClick="registerClick">Cadastre-se no beep!</Button>
        <Button class="font-12 bold login" onClick="loginClick" >Log In</Button>
       	
       	<View id="form" backgroundImage="/system/background/opacity.png" width="100%" height="100%" top="0" left="0" visible="false">
			<View id="login">
				
			</View>
       	</View> 
	</Window>
</Alloy>