<Alloy>
 	<Window id="winRegister"  class="container navigation-white vert">
 		<View height="60dp" top="0dp" width="100%" backgroundColor="#9a003a" layout="Vertical"> 
    		<View height="20dp"  width="100%"></View>
    		<View height="40dp">
    			<Button left="5dp" zIndex="4" height="20dp" width="40dp" image="/system/icones/back.png" onClick="back"></Button>
    			<Label class="title-head white">Criar Conta</Label>
    		</View>
	    </View>
	    
		<ScrollView id="navRegister" class="container vert" backgroundColor="#be0d4f" >
			<View left="30dp" right="30dp" top="40dp" class="vert">
				
				<View height="165dp" backgroundImage="/system/background/bg-login.png" layout="vertical">
					<TextField id="usernameField" hintText="Usuário" class="font-11 input-text"></TextField>
					<View left="15dp" right="15dp" height="1dp" bottom="5dp" top="0dp" backgroundColor="#dddbdb"></View>
					
					<TextField id="emailField" hintText="Email" class="font-11 input-text" ></TextField>
					<View left="15dp" right="15dp" height="1dp" bottom="5dp" top="0dp" backgroundColor="#dddbdb"></View>
					
					<TextField id="passwordField" passwordMask="true" hintText="Senha" class="font-11 input-text" ></TextField>
					<View left="15dp" right="15dp" height="1dp" bottom="5dp" top="0dp" backgroundColor="#dddbdb"></View>
					
					<TextField  passwordMask="true" id="repasswordField" hintText="Confirmar senha" class="font-11 input-text" ></TextField>
				</View>	
										
				<View width="100%" class="hor" height="20dp" top="30dp" onClick="termosClick">
					<View width="20dp" height="10dp" left="10dp">
						<View width="10dp" height="10dp" right="10dp" backgroundColor="#FFF"></View>						
						<ImageView width="15dp" height="15dp" bottom="0dp" right="5dp" id="_termos"  image="/system/icones/checked.png" visible="false"></ImageView>
					</View>
					<Label class="font-11 white bold"> Li e concordo com os termos e condições</Label>
				</View>
				
				<View top="30dp" height="30dp">
					<Button class="btn-confirm-large bold" width="100%" onClick="continuarClick">Continuar</Button>
				</View>
				
				<Button class="login-fb font-12" onClick="facebookClick"></Button>
				
				<Button class="font-12 forgot bold center" color="white" backgroundColor="transparent" width="190dp"> Termos de Política e Privacidade
				<View backgroundColor="#FFF" height="1dp" bottom="0dp"></View>
				</Button>

			</View>
   	 </ScrollView>
    </Window>
</Alloy>