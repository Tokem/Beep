<Alloy>
	<Window class="container" width="250dp" left="-250dp" backgroundColor="#FFF" layout="vertical" >
		<View backgroundColor="#f2f2f2" height="100dp" layout="horizontal">
			<View width="80dp"></View>
			<View width="170dp" height="50dp" layout="vertical" >
				<Label class="font-14 titulo left" width="100%"> André morette</Label>		
				<Label class="font-10 subtitulo left"  width="100%"> Usuário ouro </Label>	
				<Label class="font-10 subtitulo left"  width="100%"> 3700 beeps </Label>	
			</View>
		</View>
	 	<ListView canScroll="false" left="-15dp" defaultItemTemplate="template" separatorStyle="Titanium.UI.iPhone.ListViewSeparatorStyle.NONE">
	 		<Templates>
                <ItemTemplate name="template" class="hor" layout="vertical">
                	<ImageView bindId="icon"></ImageView>
                    <Label bindId="label" class="font-14 titulo left gray" width="50%"></Label>
                    <View bottom="0" height="1" backgroundColor="#e9e9e9" width="100%"></View>
                </ItemTemplate>
            </Templates>
	        <ListSection id="section">
	            <ListItem template="template" ></ListItem>
	        </ListSection>
	    </ListView>
	</Window>
</Alloy>